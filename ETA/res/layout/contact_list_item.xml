<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    tools:context="${relativePackage}.${activityClass}">
  <ImageView
        android:id="@+id/iv_send"
        android:contentDescription="@string/iv_send_eta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="65dp"
        android:paddingStart="65dp"
        android:paddingRight="20dp"
        android:paddingEnd="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/send" />
    
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/iv_send"
        android:layout_toStartOf="@id/iv_send"
        android:text="@string/name_placeholder"
        android:textColor="#045951"
        android:textSize="18sp"
        android:typeface="serif" />

    <LinearLayout  
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/tv_name">
    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone_placeholder"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp" />

     <ImageView
         android:id="@+id/iv_status"
         android:layout_width="15dp"
         android:layout_height="15dp"
         android:layout_marginLeft="5dp"
         android:layout_marginStart="5dp"
         android:layout_gravity="center_vertical"
         android:contentDescription="@string/iv_contact_status"
         android:src="@drawable/not_registered" />
     </LinearLayout>
</RelativeLayout>