<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light" />

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/ETAActionBar</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.ETAStyle</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.ETAStyle</item>
    </style>

    <style name="ETAActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#5e7974</item>
        <item name="android:titleTextStyle">@style/Theme.ETAAppTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="Theme.ETAAppTheme.ActionBar.TitleTextStyle" 
           parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
    `        <item name="android:textColor">#FFFFFF</item>
             <item name="android:textSize">25sp</item>
    </style>
   <!-- Style customization -->
       <style name="PopupMenu.ETAStyle" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel</item> 
    </style>

    <style name="DropDownListView.ETAStyle" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background</item>
    </style>
     <style name="Theme.Example.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.ETAStyle</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.ETAStyle</item>
    </style>
    
    <style name="ContactListView">
        <item name="android:verticalScrollbarPosition">right</item>
        <item name="android:fastScrollAlwaysVisible">true</item>
        <item name="android:scrollbarStyle">outsideInset</item>
    </style>

</resources>